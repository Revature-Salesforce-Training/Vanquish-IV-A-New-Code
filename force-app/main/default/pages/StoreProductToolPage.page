<apex:page controller="ToolController" lightningStylesheets="true">
    <h1>
        Welcome to the Tool Visualforce page!
    </h1>   
    <apex:form >
    <apex:selectList value="{!selectedF}" size="1">
        <apex:selectOption itemValue="name" itemlabel="Name"/>
        <apex:selectOption itemValue="type" itemlabel="Type"/>
        <apex:selectOption itemValue="brand" itemlabel="Brand"/>
        <apex:selectOption itemValue="price" itemlabel="Price"/>
    </apex:selectList>
    <apex:inputText value="{!filterval}">  Filter:  </apex:inputText>        
    <apex:commandButton value="Filter" action="{!filter}" reRender="toollist"/>
    <apex:commandButton value="Clear Filter" action="{!clear}" reRender="toollist"/>
    <apex:pageBlock id="toollist">
        <apex:pageBlockTable value="{!product}" var="tools" rows="5">
            <apex:column value="{!tools.name}"/>
            <apex:column value="{!tools.Type__c}"/>
            <apex:column value="{!tools.Brand__c}"/>
            <apex:column value="{!tools.Price__c}"/>
        </apex:pageBlockTable>  
        <apex:pageblockbuttons >
            <apex:commandButton value="Next Page" action="{!next}" reRender="toollist"/>
            <apex:commandButton value="Previous Page" action="{!previous}" reRender="toollist"/>
        </apex:pageblockbuttons>
    </apex:pageBlock>
    </apex:form>
</apex:page>